<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/activity" >

    <LinearLayout style="@style/toolbar" >

        <ImageView
            android:id="@+id/back"
            style="@style/toolbar_back" />

        <TextView
            style="@style/toolbar_title"
            android:text="赚钱" />
    </LinearLayout>

    <LinearLayout style="@style/activity_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn_init"
                style="@style/common_btn"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_selector"
                android:text="初始化用户" />

            <TextView
                android:id="@+id/btn_change_user"
                style="@style/common_btn"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_selector"
                android:text="更换用户" />

            <TextView
                android:id="@+id/btn_earn"
                style="@style/common_btn"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_selector"
                android:text="开始赚钱" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn_daily_clear"
                style="@style/common_btn"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_selector"
                android:text="每天清除" />

            <TextView
                android:id="@+id/btn_clear"
                style="@style/common_btn"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_selector"
                android:text="清理本地缓存" />

            <TextView
                android:id="@+id/btn_chengguolv"
                style="@style/common_btn"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_selector"
                android:text="降低成果率" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn_duomeng"
                style="@style/common_btn"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_selector"
                android:text="多盟平台" />
            
            <TextView
                android:id="@+id/btn_duomeng_jifen"
                style="@style/common_btn"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_selector"
                android:text="查看多盟积分" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/btn_times"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:hint="降低循环次数/默认20"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/btn_time"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:hint="间隔/默认5秒"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_userhouse"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:text="用户库信息:"
            android:textColor="@color/red_btn" />

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:text="当前用户:"
            android:textColor="@color/red_btn" />

        <TextView
            android:id="@+id/tv_sdk"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:text="注入sdk信息:"
            android:textColor="@color/red_btn" />
    </LinearLayout>

</LinearLayout>